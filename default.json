{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "timezone": "Europe/Madrid Africa/Ceuta",
  "schedule": [
    "on the first day of the month"
  ],
  "labels": [
    "renovate",
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "React typings",
      "matchPackageNames": [
        "@types/react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": ["/eslint/"]
    },
    {
      "groupName": "@lerna-lite monorepo",
      "matchPackageNames": [
        "/@lerna-lite/"
      ]
    },
    {
      "groupName": "@patternfly",
      "matchPackageNames": [
        "/@patternfly/"
      ]
    }
  ]
}
