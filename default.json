{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "schedule": [
    "before 6am"
  ],
  "packageRules": [
    {
      "groupName": "React typings",
      "matchPackageNames": [
        "@types/react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackagePatterns": ["eslint"]
    },
    {
      "groupName": "@lerna-lite monorepo",
      "matchPackageNames": [
        "@lerna-lite/*"
      ]
    },
    {
      "groupName": "@patternfly",
      "matchPackageNames": [
        "@patternfly/*"
      ]
    }
  ]
}
